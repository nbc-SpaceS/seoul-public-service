<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_reviewed_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/background_radius_10dp"
        android:elevation="4dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_reviewed_thumbnail"
            android:layout_width="88dp"
            android:layout_height="66dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/place_holder_1" />

        <TextView
            android:id="@+id/tv_reviewed_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="지역구"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/iv_reviewed_thumbnail"
            app:layout_constraintTop_toTopOf="@id/iv_reviewed_thumbnail" />

        <TextView
            android:id="@+id/tv_reviewed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="공공서비스 제목이 들어가는 공간"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/tv_reviewed_review_content"
            app:layout_constraintStart_toEndOf="@id/iv_reviewed_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/tv_reviewed_area" />

        <TextView
            android:id="@+id/tv_reviewed_review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="내 닉네임 : 댓글 내용이 들어가는 공간"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_reviewed_thumbnail"
            app:layout_constraintStart_toEndOf="@id/iv_reviewed_thumbnail" />

        <TextView
            android:id="@+id/tv_reviewed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99.99.99"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_reviewed_thumbnail" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
